<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">

    <objectAnimator
        android:valueFrom="0"
        android:valueTo="-25"
        android:propertyName="rotation"
        android:repeatMode="reverse"
        android:duration="@integer/anim_shake" />

    <objectAnimator
        android:valueFrom="-25"
        android:valueTo="25"
        android:propertyName="rotation"
        android:repeatMode="reverse"
        android:duration="@integer/anim_shake" />
    <objectAnimator
        android:valueFrom="25"
        android:valueTo="-10"
        android:propertyName="rotation"
        android:repeatMode="reverse"
        android:duration="@integer/anim_shake" />
    <objectAnimator
        android:valueFrom="-10"
        android:valueTo="10"
        android:propertyName="rotation"
        android:repeatMode="reverse"
        android:duration="@integer/anim_shake" />
    <objectAnimator
        android:valueFrom="10"
        android:valueTo="0"
        android:propertyName="rotation"
        android:repeatMode="reverse"
        android:duration="@integer/anim_shake" />

</set>